# Check http://editorconfig.org for more information
# This is the main config file for this project:
root = true

[*]
charset = utf-8
indent_style = tab
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true


[*.{json, yml, xml}]  # 2 spaces for static files:
indent_style = space
indent_size = 2


[*.py]  # Python files should have 4 spaces as indent:
indent_style = space
indent_size = 4


[.{md, rst, in}]  # Do not reformat these files
indent_style = ignore
indent_size = ignore
